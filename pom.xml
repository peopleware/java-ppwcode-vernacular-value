  <modelVersion>4.0.0</modelVersion>

  <properties>
    <ppw.bareArtifactName>ppw-value</ppw.bareArtifactName>
    <ppw.markVersion>II</ppw.markVersion>
    <ppw.javaSourceDirectory>src/main/java</ppw.javaSourceDirectory>
