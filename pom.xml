    </license>
  </licenses>
  <url>http://cvs.peopleware.be/projects/JavaLibraries/${pom.artifactId}/</url>

  <version>1.3.0-1.3</version>

  <scm>
    <!-- no anonymous access possible
    <connection />
    -->
